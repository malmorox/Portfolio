---
import TechnologyLabel from '@components/ui/TechnologyLabel.astro'
import techData from '@data/technologies.json'

interface ProjectProps {
	name: string
	description: string
	imgLogo: string
	imgPreview: string
	technologies: string[]
	link: string
}

const { 
	name,
	description,
	imgLogo,
	imgPreview, 
	technologies,
	link 
} = Astro.props as ProjectProps

const allTechnologies = techData.technologies

function getTechnologyData(techId: string) {
    return allTechnologies.find(t => t.technology === techId)
}
---
<a	
	href={link}
	class="project-link"
	target="_blank"
	rel="noopener"
>
	<article class="project">
		<div class="project-images-zone">
			<img src={imgLogo} alt={`${name} logo`} class="proyect-image-logo">
			<img src={imgPreview} alt={`${name} preview`} class="project-image-preview" />
		</div>
		<div class="project-info-zone">
			<h3 class="project-title"> {name} </h3>
			<p class="project-description"> {description} </p>
			<div class="project-technologies">
				{technologies.map((t: string) => {
					const tech = getTechnologyData(t)
					return tech ? <TechnologyLabel name={tech.name} logo={tech.logo} /> : null
				})
				}
			</div>
		</div>
	</article>
</a>

<style>
	.project-link {
		@apply block
	}
	
	.project {
		@apply w-full h-auto bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700;
	}

	.project-preview-zone {
		@apply relative
	}

	.project-image-logo {
		@apply absolute top-0 left-0 w-16 h-16 m-4
	}

	.project-image-preview {
		@apply w-full h-48 object-cover rounded-t-lg
	}

	.project-info-zone {
		@apply p-4
	}

	.project-title {
		@apply text-xl font-bold
	}

	.project-description {
		@apply text-gray-600
	}

	.project-technologies {
		@apply flex flex-wrap gap-2 mt-2
	}
</style>
