---
const { link, text } = Astro.props;
const isExternal = link.startsWith('http');
---
<li class="connect-element">
    <a
        href={link}
        class="connect-link"
        target={isExternal ? "_blank" : undefined}
        rel={isExternal ? "noopener" : undefined}
    >
        {text}
    </a>
</li>

<style>
    .connect-element {
        @apply flex-1;
        transition: flex-grow 0.5s ease
    }

    .connect-element:hover {
        flex-grow: 2
    }

    .connect-element:first-child .connect-link {
        @apply rounded-tl-3xl
    }

    .connect-element:last-child .connect-link {
        @apply rounded-br-3xl
    }

    .connect-link {
        @apply block text-center text-3xl font-bold text-gray-800 border-4 border-gray-800 py-8 px-4 rounded-lg sm:rounded-t-lg hover:bg-orange-500 transition duration-300
    }

    .connect-link:hover {
        @apply border-orange-500;
        color: hsl(240, 20%, 99%);
    }
</style>