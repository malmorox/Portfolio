---
const { link, text } = Astro.props;
const isExternal = link.startsWith('http');
---
<li class="connect-element">
    <a
        href={link}
        class="connect-link"
        target={isExternal ? "_blank" : undefined}
        rel={isExternal ? "noopener" : undefined}
    >
        {text}
    </a>
</li>

<style>
    .connect-element {
        @apply flex-1;
        transition: flex-grow 0.5s ease
    }

    .connect-element:hover {
        flex-grow: 2
    }

    .connect-link {
        @apply block text-center text-xl font-bold text-gray-400 border-4 border-gray-400 py-8 px-4 rounded-lg sm:rounded-t-lg hover:bg-blue-500 hover:text-gray-800 transition duration-300
    }
</style>