---
const { link, text } = Astro.props;
const isExternal = link.startsWith('http');
---
<li class="connect-element">
    <a
        href={link}
        class="connect-link"
        target={isExternal ? "_blank" : undefined}
        rel={isExternal ? "noopener" : undefined}
    >
        <div class="connect-link-content">
            <span> {text} </span>
        </div>
    </a>
</li>

<style>
    .connect-element {
        @apply flex-1;
        transition: flex-grow 0.5s ease
    }

    .connect-element:hover {
        flex-grow: 2
    }

    .connect-element:first-child .connect-link {
        @apply rounded-tl-3xl
    }

    .connect-element:last-child .connect-link {
        @apply rounded-br-3xl
    }

    .connect-link {
        @apply block text-4xl font-extrabold text-zinc-800 border-4 border-zinc-800 h-36 px-4 rounded-lg sm:rounded-t-lg transition duration-300
    }

    .connect-link:hover {
        background-color: #f47226;
        border-color: #f47226;
        color: hsl(240, 20%, 99%);
    }

    .connect-link-content {
        @apply flex items-center justify-center h-full
    }
</style>