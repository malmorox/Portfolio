---
import ConnectItem from '@components/ui/SocialMediaElement.astro'
import socialsData from '@data/social-media.json'

const socials = socialsData.socials
---
<ul class="connect-links">
    {socials.map(social => (
        <ConnectItem link={social.link} text={social.text} />
    ))}
</ul>

<style>
    .connect-links {
        @apply list-none p-0 flex flex-col py-8 gap-3.5 sm:flex-row sm:w-full
    }
</style>