---
import type { Technology } from '@types/types';

interface Props {
	name: string;
	//cabecera: string;
	description: string;
	imgLogo: string;
	imgPreview: string;
	technologies: Technology[];
	link: string;
};

const { 
	name, 
	description,
	imgLogo,
	imgPreview, 
	technologies,
	link 
} = Astro.props as Props;
---

<a	
	href={link}
	class="project-link"
	target="_blank"
	rel="noopener"
>
	<article class="project">
		
	</article>
</a>

<style>
	.project-link {
		@apply block;
	}
	
	.project {
		@apply bg-white shadow-lg rounded-lg overflow-hidden;
	}
</style>
