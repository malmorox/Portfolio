</section>

<style>
    .skills-container {
        @apply max-w-screen-xl mx-auto flex flex-col px-4;
    }

    .skills-title {
        @apply text-3xl font-bold text-left text-blue-500
    }

    .skills-text {
        @apply text-lg text-left text-gray-700 mb-4
    }
</style>