---
import Technology from '@components/ui/Technology.astro'

const techSkills = {
    'frontend': ['HTML y CSS', 'Javascript', 'Typescript', 'React', 'Astro', 'Tailwind CSS'],
    'backend': ['Node.js', 'PHP', 'C#', 'Java', 'Python'],
    'databases': ['MySQL', 'MongoDB'],
    'devops': ['Docker', 'Apache', 'Nginx', 'Git']
}
---
<section id="skills">
    <div class="skills-container">
        <h2 class="skills-title"> Mis habilidades </h2>
        <div>
            <div class="skills-table">
                {Object.entries(techSkills).map(([category, technologies]) => (
                    <div class="skill-row">
                        <div class="skill-category">
                            <div class="skill-category-text">
                                <h3> {category} </h3>
                            </div>
                        </div>
                        <div class="skill-technologies">
                            {technologies.map((tech) => (
                                <span class="tech-badge">{tech}</span>
                            ))}
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    .skills-container {
        @apply max-w-screen-xl mx-auto flex flex-col px-6
    }

    .skills-title {
        @apply text-4xl font-bold text-left text-blue-500 mb-10
    }

    .skills-text {
        @apply text-lg text-left text-gray-700 mb-4
    }

    .skills-grid {
        @apply grid grid-cols-1 gap-6;
    }

    .skill-row {
        @apply grid grid-cols-[auto,1fr] items-center border-b-4 border-gray-300;
    }

    .skill-row:last-child {
        border-bottom: none;
    }

    .skill-category {
        @apply flex items-center justify-center text-gray-300 text-lg px-16 border-r-4 border-gray-300 h-32
    }

    .skill-category-text {
        @apply text-center w-32
    }

    .skill-category-text h3 {
        @apply font-bold text-2xl text-gray-300
    }

    .skill-technologies {
        @apply flex w-full p-4 gap-2
    }

    .tech-badge {
        @apply bg-blue-100 text-blue-800 text-sm font-medium px-3 py-1 rounded-full;
    }
</style>