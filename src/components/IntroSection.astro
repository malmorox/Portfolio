---
import PersonalImage from "@components/PersonalImage.astro";
---
<section id="intro">
    <div class="intro-container">
        <header class="intro-header">
            <div class="intro-header-text">
                <h1 class="intro-title">
                    <span class="title-small"> Marcos Almorox. </span>
                    <span class=""> Desarrollador web creativo, </span>
                </h1>
                <p class="intro-text">
                    I create kick-ass websites & apps, from design to code
                </p>
                <div class="buttons-wrapper">
                    
                </div>
            </div>
            <div class="intro-header-img">
                <PersonalImage />
            </div>
        </header>
    </div>
</section>

<style>
    .intro-container {
        @apply max-w-screen-xl mx-auto flex flex-col px-6;
    }

    .intro-header {
        @apply flex items-center justify-between gap-8
    }

    .intro-header-text {
        @apply text-left
    }

    .intro-title {
        @apply text-6xl font-bold text-blue-500
    }

    .title-small {
        @apply block text-xl
    }

    .intro-text {
        @apply text-lg text-gray-700 mb-4
    }

    .buttons-wrapper {
        @apply flex gap-4
    }
</style>