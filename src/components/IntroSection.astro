---
import PersonalImage from "@components/PersonalImage.astro";
import { HiArrowNarrowDown } from "react-icons/hi";
---
<section id="intro">
    <div class="intro-container">
        <header class="intro-header">
            <div class="intro-header-text">
                <h1 class="intro-title">
                    <span class="title-small"> Marcos Almorox. </span>
                    <span class="title-big"> Desarrollador web <span class="text-gradient">full-stack</span> español </span>
                </h1>
                <p class="intro-text">
                    Creo webs y apps con enfoque en rendimiento, usabilidad y diseño.
                </p>
                <div class="buttons-wrapper">
                    <a href="#contact" class="btn">Ponte en contacto</a>
                    <a href="#about" class="btn-muted">
                        <span>Scrollea para ver más</span>
                        <HiArrowNarrowDown className="btn-muted-icon" />
                    </a>
                </div>
            </div>
            <div class="intro-header-img">
                <PersonalImage />
            </div>
        </header>
    </div>
</section>

<style>
    .intro-container {
        @apply max-w-screen-xl mx-auto flex flex-col px-6;
    }

    .intro-header {
        @apply flex items-center justify-between gap-8
    }

    .intro-header-text {
        @apply text-left flex-1 min-w-[300px];
    }

    .intro-title {
        color: hsl(240, 20%, 99%);
    }

    .title-small {
        @apply block text-2xl font-semibold;
        color: hsl(0, 0%, 60%);
    }

    .title-big {
        @apply text-7xl font-extrabold
    }

    .text-gradient {
        background-image: linear-gradient(20deg, #e76a23, #fac937);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 100% 200%;
        background-position-y: 100%;
        animation-name: pulse;
        animation-duration: 3.3s;
        animation-timing-function: ease-in-out;
        animation-iteration-count: infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            background-position-y: 0%;
        }
        50% {
            background-position-y: 80%;
        }
    }

    .intro-text {
        @apply text-xl py-5;
        max-width: 300px;
        color: hsl(240, 20%, 99%);
    }

    .buttons-wrapper {
        @apply flex items-center my-7 text-xl;
        gap: 3rem;
    }

    .buttons-wrapper .btn {
        @apply text-xl px-6 py-4 rounded-lg rounded-tr-3xl font-bold;
        background-color: #f47226;
        color: hsl(240, 20%, 99%);
        transition: 0.3s transform ease, 0.3s background-color ease;
    }

    .buttons-wrapper .btn:hover {
        background-color: #8f451a;
        outline: 4px solid #f47226;
        outline-offset: -4px;
        transform: scale3d(1.1, 1.1, 1);
    }

    .buttons-wrapper .btn-muted {
        @apply flex items-center gap-1.5;
        color: hsl(0, 0%, 60%);
    }

    .btn-muted-icon {
        transition: 0.3s transform ease;
    }

    .buttons-wrapper .btn-muted:hover .btn-muted-icon {
        transform: translateY(0.25rem);
    }

    .intro-header-img {
        @apply flex justify-end flex-1 min-w-[300px];
    }
</style>